<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:fitsSystemWindows="true"
    >

    <!-- Кнопки в верхней части экрана -->
    <LinearLayout
        android:id="@+id/buttonsLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Кнопка "Создать отчет" -->
        <Button
            android:id="@+id/buttonCreateReport1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:backgroundTint="#66BB6A"
            android:text="Создать отчет"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <!-- Кнопка "Показать на карте" -->
        <Button
            android:id="@+id/buttonShowOnMap1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:backgroundTint="#42A5F5"
            android:text="Показать на карте"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- RecyclerView для списка отчетов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReports1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>

    <!-- Кнопка "Экспорт отчетов" -->
    <Button
        android:id="@+id/buttonExportReports1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Экспорт отчетов"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:backgroundTint="#FF7043"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>
</LinearLayout>
